#:import character_display character_display

<SpriteButton>:
    size_hint: None, None
    size: 250, 250


<CharacterDisplay>:
    sprite_layout: _sprite_layout

    BoxLayout:
        orientation: 'vertical'

        StackLayout:
            id: _sprite_layout

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 30

            Button:
                text: '<'
                on_release: root.previous_page()

            Button:
                text: '>'
                on_release: root.next_page()
